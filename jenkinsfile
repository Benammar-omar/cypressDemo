pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                 git branch: 'main', url: 'https://github.com/Benammar-omar/cypressDemo.git'
            }
        }

        stage('Install Cypress') {
            steps {
                 bat 'npm install cypress' // Installation de Cypress via npm
                 bat 'npx cypress install' // Installation du binaire Cypress
            }
        }

        stage('Run Tests') {
            steps {
                bat 'npx cypress run'
            }
        }
       stage('Publish Reports') {
    steps {
        // Créer un nouveau répertoire pour les rapports
        bat 'mkdir cypress-reports'

        // Copier les rapports Cypress dans le répertoire nouvellement créé
        bat 'xcopy /E /I cypress-reports .\\cypress-reports'

        // Publier les rapports en tant que rapport Jenkins
        publishHTML(target: [
            allowMissing: false,
            alwaysLinkToLastBuild: false,
            keepAll: true,
            reportDir: 'cypress-reports',
            reportFiles: 'index.html',
            reportName: 'Cypress Test Report'
        ])
    }
}
    }
}